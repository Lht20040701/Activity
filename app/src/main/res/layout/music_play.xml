<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43737A"
    android:padding="16dp">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- 返回按钮 - 用灰色方块代替 -->
        <View
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/go_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Now Playing"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 菜单按钮 - 用灰色方块代替 -->
        <View
            android:id="@+id/btn_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/order_play" /> <!-- 半透明白色 -->
    </LinearLayout>

    <!-- 专辑封面 - 用紫色方块代替 -->
    <View
        android:id="@+id/album_art"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/temp"/>  <!-- 紫色 -->

    <!-- 歌曲信息 -->
    <LinearLayout
        android:id="@+id/tag_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_art"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Artist Name"
            android:textColor="#B3FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- 进度条 -->
    <LinearLayout
        android:id="@+id/tag_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_header"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <SeekBar
            android:id="@+id/song_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="20"
            android:max="100"
            android:thumbTint="#FFFFFFFF"
            android:progressTint="#FFFFFFFF"
            android:progressBackgroundTint="#4DFFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:23"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:45"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_process"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 随机播放按钮 - 用灰色圆形代替 -->
        <View
            android:id="@+id/btn_shuffle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/random_play"
            android:clickable="true"
            android:focusable="true" />

        <!-- 上一首按钮 - 用白色圆形代替 -->
        <View
            android:id="@+id/btn_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/left_narrow"
            android:clickable="true"
            android:focusable="true" />

        <!-- 播放按钮 - 用白色圆形代替 -->
        <View
            android:id="@+id/btn_play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/play_white"
            android:clickable="true"
            android:focusable="true" />

        <!-- 下一首按钮 - 用白色圆形代替 -->
        <View
            android:id="@+id/btn_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/right_narrow"
            android:clickable="true"
            android:focusable="true" />

        <!-- 循环按钮 - 用灰色圆形代替 -->
        <View
            android:id="@+id/btn_repeat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/one_play"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 底部附加选项 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">
    </LinearLayout>

</RelativeLayout>